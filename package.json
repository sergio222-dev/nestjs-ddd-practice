{
  "name": "nestjs-ddd-practice",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "schema:generate": "ts-node --project .\\tsconfig.json -r tsconfig-paths/register .\\libs\\first-aprox-lib\\bin\\create-schema.mikro.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "mikro-orm": "^3.6.15",
    "nestjs-mikro-orm": "^1.0.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "ts-node": "^8.10.2",
    "uuid": "^8.1.0",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.1.3",
    "@types/express": "^4.17.3",
    "@types/jest": "^26.0.0",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "faker": "^4.1.0",
    "jest": "26.0.1",
    "jest-mock-extended": "^1.0.9",
    "mysql2": "^2.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./libs/first-aprox-lib/mikro-orm.config.ts",
      "./dist/libs/first-aprox-lib/mikro-orm.config.js"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test/"
    ],
    "moduleNameMapper": {
      "@app/first-aprox/(.*)": "<rootDir>/apps/first-aprox/$1",
      "@app/first-aprox": "<rootDir>/apps/first-aprox/",
      "@libs/shared/(.*)": "<rootDir>/libs/shared/$1",
      "@libs/shared": "<rootDir>/libs/shared/",
      "@libs/first-aprox-lib/(.*)": "<rootDir>/libs/first-aprox-lib/$1",
      "@libs/first-aprox-lib": "<rootDir>/libs/first-aprox-lib/"
    }
  }
}
