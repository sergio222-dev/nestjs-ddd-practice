{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@libs/shared/*": [
        "libs/shared/*"
      ],
      "@libs/shared": [
        "libs/shared"
      ],
      "@app/first-aprox/*": [
        "apps/first-aprox/*"
      ],
      "@app/first-aprox": [
        "apps/first-aprox"
      ],
      "@libs/second-aprox": [
        "libs/second-aprox/src"
      ],
      "@libs/second-aprox/*": [
        "libs/second-aprox/src/*"
      ],
      "@libs/first-aprox-lib": [
        "libs/first-aprox-lib/src"
      ],
      "@libs/first-aprox-lib/*": [
        "libs/first-aprox-lib/src/*"
      ]
    }
  }
}