{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@libs/Shared/*": [
        "libs/shared/*"
      ],
      "@libs/Shared": [
        "libs/shared"
      ],
      "@app/First-aprox/*": [
        "apps/first-aprox/*"
      ],
      "@app/First-aprox": [
        "apps/first-aprox"
      ],
      "@libs/First-aprox-lib": [
        "libs/first-aprox-lib/"
      ],
      "@libs/First-aprox-lib/*": [
        "libs/first-aprox-lib/*"
      ]
    }
  }
}